{
  "extends": "./tsconfig.json",
  "include": ["src"],
  "exclude": ["**/tests/**/*", "**/test/**/*", "**/*.test.*", "**/*.test"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo"
  }
}
